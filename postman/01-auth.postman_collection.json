{
  "info": {
    "name": "Clothing E-Commerce Auth",
    "_postman_id": "phase1-auth-collection",
    "description": "Authentication API - Register, Login, GetMe. Supports automatic guest cart merging on login/register.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string",
      "description": "JWT token from login/register response"
    }
  ],
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "description": "Register a new user. Returns user data and JWT token."
      },
      "response": []
    },
    {
      "name": "Register with Guest Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"123456\",\n  \"guestCart\": {\n    \"items\": [\n      {\n        \"product\": \"PRODUCT_ID_HERE\",\n        \"size\": \"M\",\n        \"quantity\": 2\n      },\n      {\n        \"product\": \"ANOTHER_PRODUCT_ID\",\n        \"size\": \"L\",\n        \"quantity\": 1\n      }\n    ]\n  }\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "description": "Register a new user and automatically merge guest cart. Guest cart items are merged into user's cart after registration. Duplicate items (same product + size) combine quantities. Replace PRODUCT_ID_HERE with actual product IDs from your localStorage guest cart."
      },
      "response": []
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Login user. Returns user data and JWT token."
      },
      "response": []
    },
    {
      "name": "Login with Guest Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"guestCart\": {\n    \"items\": [\n      {\n        \"product\": \"PRODUCT_ID_HERE\",\n        \"size\": \"M\",\n        \"quantity\": 2\n      },\n      {\n        \"product\": \"ANOTHER_PRODUCT_ID\",\n        \"size\": \"L\",\n        \"quantity\": 1\n      }\n    ]\n  }\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Login user and automatically merge guest cart. Guest cart items stored in localStorage are merged into user's cart after login. Duplicate items (same product + size) combine quantities. Invalid/out-of-stock items are skipped. Replace PRODUCT_ID_HERE with actual product IDs from your localStorage guest cart."
      },
      "response": []
    },
    {
      "name": "Get Current User (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT authentication token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "me"]
        },
        "description": "Get current authenticated user's information. Requires valid JWT token."
      },
      "response": []
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Register Existing Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Test error handling when trying to register with an email that already exists"
          },
          "response": []
        },
        {
          "name": "Login Wrong Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"wrongpassword\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Test error handling for incorrect password"
          },
          "response": []
        },
        {
          "name": "Login Non-existent User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nonexistent@example.com\",\n  \"password\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Test error handling for non-existent user email"
          },
          "response": []
        },
        {
          "name": "Get Current User Without Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Test error handling when accessing protected route without authentication token"
          },
          "response": []
        },
        {
          "name": "Get Current User Invalid Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid_token_here"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Test error handling for invalid JWT token"
          },
          "response": []
        }
      ]
    }
  ]
}
